<div class="d-flex flex-column" style="height: 100vh;">
  <div class="index-container flex-grow-1 ">

  <div class="discounts-amount d-flex justify-content-around my-5">
      <%number = 10%>
      <% (1..4).each do %>
        <div class="discount-item d-flex align-items-center justify-content-center">
          <h5 class="discount-amount m-0"><%=number%>%</h5>
          <% number += 10 %>
        </div>
      <% end %>
  </div>
  <div class="d-flex justify-content-center mb-3">
  <div class="banner-index d-flex justify-content-center align-items-center">
      <h1 class='title'>Discount</h1>
      <img id="logo" src=<%= asset_path('logo-white.png') %> alt="discount-discover">
      <h1 class='title'>Discover</h1>
  </div>
  </div>

  <div class="map-container" data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  <h3 class="ms-4 me-0 my-4 best-stores">Best rated stores</h3>

<div class="card-container px-4">
      <%@stores.first(8).each do |store| %>
        <%= link_to store_path(store), class: "card-link" do %>
            <div class="store-card">
              <div class="top-info mb-3">
                <%= cl_image_tag store.photo.key, height: 100, class: "store-image" if store.photo.attached?%>
              </div>
              <div class="card-info m-0 px-3 py-3">
                <div class="d-flex justify-content-between">
                 <h4><strong><%= store.name %></strong></h4>
                  <h4 class="text-end"><strong>1,5 km</strong></h5>
                </div>

                <p><%= store.address %></p>
                <div>
                 <p class="m-0"><%= store.opening_hour %></p>
                 <p class="m-0"><%= store.closing_hour %></p>
                </div>
              </div>
              <div class="card-bottom d-flex align-items-center justify-content-between py-2 px-4">
             <h5 class="m-0"><strong>Discounts up to...</strong></h5>
                <div class="card-discount-item d-flex flex-column align-items-center justify-content-center">
                  <% products = store.products.order(:discount) %>
                  <p class="discount-amount m-0"><%=products.last.discount%>%</p>
                </div>
            </div>
          </div>
       <% end %>
     <% end %>
    </div>

  <div class="footer">
  </div>

  </div>
</div>
