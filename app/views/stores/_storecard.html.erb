<div>
<div class="store-card">
  <div class="d-flex flex-column m-0 px-3 py-3">
    <div class="d-flex justify-content-between mt-1">
      <h5 class="w-50"><strong><%= product.name %></strong></h5>
      <p><%= link_to "more info", store_product_path(product.store_id, product), class: "btn-ghost" %></p>
    </div>
    <div class="mt-3">
      <% disc = (product.price * product.discount/100).round(2) %>
    </div>
    <div class="d-flex align-items-center justify-content-between">
      <div class="discount-info d-flex align-items-start">
        <p class="mb-0"style="color: red; font-size: 1.2em;"><strong><span class="text-muted text-decoration-line-through"><%= number_with_precision(product.price, :precision => 2) %> €</span><p class="ms-1 mb-0" style="font-size: 1.2em; "> Now: <%= number_with_precision(product.price - disc, :precision => 2)%>€</p></strong></p>
      </div>
      <div class="discount-product d-flex align-items-center justify-content-center me-4">
        <p class="mb-0" style="color:white; font-weight: bold;"><%=product.discount%>%</p>
      </div>
    </div>
  </div>
  <div class="p-2">
    <%= cl_image_tag product.photo.key, height: 100, class: "store-image" %>
  </div>
</div>
</div>
