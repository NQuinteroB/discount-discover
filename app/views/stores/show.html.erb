<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%#= @store.photo.attached? ? cl_image_path(@store.photo.key) : asset_path('store_background.jpg') %>)">
    <h1><%= @store.name %></h1>
  </div>
  <span class="product-tag"><%#= pluralize(@store.products.size, "product") %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any products yet!" if @store.products.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_product_modal">
        Add a product
      </button>
      <%= link_to "delete this store", store_path(@store), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this store?" } %>
    </div>
  </div>
  <div class="row my-2">
    <%# @store.products.each do |product| %>
      <%# bookmark = Bookmark.find_by(store: @store, product: product) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%#= image_tag product.poster_url, alt: product.title, class: "product-img rounded-top" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%#= product.title %> <span class="text-muted font-weight-normal">â€¢ <%#= product.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%#= product.overview %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%#= bookmark.comment %></small>
              </div>
              <small class="text-right flex-shrink-0"><%#= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{product.title} from your #{@store.name} store"}, class: 'text-danger' %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr class="my-5">
  <div class="row">
    <div class="col-12 col-sm-6">
      <<!-- h3>Reviews</h3> -->
      <%# if @store.reviews.empty? %>
       <!--  <small><em class="text-muted">Be the first one to review this store</em></small> -->
      <%# end %>
      <%# @store.reviews.each do |review| %>
      <!--   <div>
          <%# review.rating.times do %>
            <i class="fas fa-star star-yellow"></i>
          <%# end %>
          <small><em class="text-muted"><%#= distance_of_time_in_words_to_now(review.created_at) %> ago</em></small>
          <p class="mb-0"><%#= review.comment %></p>
        </div>
        <hr> -->
      <%# end %>
    </div>
    <div class="col-12 col-sm-6">
      <div class="bg-white rounded p-3">
       <!--  <h5>Add your review</h5> -->
        <%#= simple_form_for [@store, @review] do |f| %>
          <%#= f.input :comment, placeholder: "Add your review here..." %>
          <%#= f.input :rating, as: :select, collection: (1..5), required: true, prompt: "What's your rating", input_html: { data: { controller: "star-rating" } } %>
          <%#= f.submit class:"btn btn-flat" %>
        <%# end %>
      </div>
    </div>
  </div>
</div>

