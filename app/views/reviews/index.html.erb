

<div class="store-banner d-flex align-items-center mb-3">
  <%= link_to store_path(@store) do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <div class="container d-flex justify-content-center">
    <h2><i class="fa-solid fa-store mr-3"></i></h2>
    <h2 class="text-center"><%= @store.name %></h2>
  </div>
</div>

<div class="d-flex justify-content-end">
  <%= link_to "Add review", new_store_review_path(@store), class: "btn-ghost my-3 me-5" %>
</div>

<div class="container d-flex justify-content-center">
  <div class="card-review">
    <%= render 'stores/storereview' %>
  <hr>
  </div>
</div>
